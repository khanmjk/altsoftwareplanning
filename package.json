{
  "name": "altsoftwareplanning",
  "private": true,
  "version": "0.0.0",
  "description": "SMT Platform tooling",
  "scripts": {
    "prepare": "husky",
    "lint": "eslint \"js/**/*.js\" \"ai/**/*.js\" \"smt-feedback-worker/**/*.js\"",
    "lint:fix": "eslint \"js/**/*.js\" \"ai/**/*.js\" \"smt-feedback-worker/**/*.js\" --fix",
    "format": "prettier --write \"**/*.{js,css,md,html,json}\"",
    "format:check": "prettier --check \"**/*.{js,css,md,html,json}\"",
    "stylelint": "stylelint \"css/**/*.css\"",
    "stylelint:fix": "stylelint \"css/**/*.css\" --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "node scripts/run-vitest-coverage.js",
    "test:e2e": "node scripts/run-cypress.js",
    "test:e2e:open": "node scripts/run-cypress.js --open",
    "test:e2e:coverage": "node scripts/run-cypress.js --coverage && npm run coverage:e2e:report",
    "coverage:e2e:report": "node scripts/generate-coverage-report.js --temp-dir .nyc_output --report-dir coverage/e2e --reporter lcov --reporter text-summary --reporter html",
    "contract:check": "node scripts/contract-scan.js",
    "depcheck": "depcheck --ignores=stylelint-config-standard",
    "blueprints:catalog": "node scripts/blueprints/build-catalog-index.js",
    "blueprints:generate": "node scripts/blueprints/generate-seed.js",
    "blueprints:validate": "node scripts/blueprints/validate-seed.js",
    "blueprints:normalize-years": "node scripts/blueprints/normalize-seed-years.js",
    "blueprints:smoke-import": "node scripts/blueprints/smoke-import-seed.js",
    "verify": "npm run lint && npm run stylelint && npm run contract:check && npm run depcheck"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "cypress": "15.8.1",
    "depcheck": "1.4.7",
    "eslint": "9.39.2",
    "globals": "15.6.0",
    "husky": "9.0.11",
    "istanbul-lib-coverage": "3.2.2",
    "istanbul-lib-instrument": "6.0.3",
    "istanbul-lib-report": "3.0.1",
    "istanbul-reports": "3.1.7",
    "jsdom": "24.1.0",
    "lint-staged": "15.2.10",
    "prettier": "3.3.3",
    "stylelint": "16.6.1",
    "stylelint-config-standard": "36.0.0",
    "vitest": "4.0.16"
  },
  "overrides": {
    "qs": "6.14.1"
  },
  "lint-staged": {
    "js/**/*.js": "eslint --fix",
    "css/**/*.css": "stylelint --fix",
    "*.{js,css,md,html,json}": "prettier --write"
  }
}
