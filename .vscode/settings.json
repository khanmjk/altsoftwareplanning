{
    "liveServer.settings.ignore": [
        "**/.vscode/**",
        "**/.git/**",
        "**/.DS_Store",
        "**/*.sqlite",
        "**/*.sqlite-journal",
        "Backlog.txt"
    ],
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "always",
        "source.fixAll.stylelint": "always"
    }
}
